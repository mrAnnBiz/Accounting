{
  "functions": {
    "app/api/search-papers/route.ts": {
      "maxDuration": 10
    },
    "app/api/pdf-proxy/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/papers/(.*\\.pdf)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/pdf"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, HEAD, OPTIONS"
        }
      ]
    }
  ]
}