{
  "functions": {
    "app/api/search-papers/route.ts": {
      "maxDuration": 10
    },
    "app/api/pdf-proxy/route.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/papers/:path*",
      "destination": "/papers/:path*"
    }
  ],
  "headers": [
    {
      "source": "/papers/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Type",
          "value": "application/pdf"
        }
      ]
    }
  ]
}